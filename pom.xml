    <groupId>de.btu.monopoly</groupId>
    <artifactId>Monopoly</artifactId>
    <version>0.3-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Monopoly</name>
    <description>Brettspiel "Monopoly"</description>
    <inceptionYear>2017</inceptionYear>
    <organization>
        <name>BTU Cottbus-Senftenberg / Chair of Software Engineering</name>
        <url>https://www.b-tu.de/fg-software-systemtechnik/</url>
    </organization>


    <!-- SCM Metadata -->
    <scm>
        <connection>scm:git:https://git.informatik.tu-cottbus.de/swp/ws1718/monopoly-ws1718-g1.git</connection>
        <developerConnection>scm:git:https://git.informatik.tu-cottbus.de/swp/ws1718/monopoly-ws1718-g1.git</developerConnection>
        <url>https://git.informatik.tu-cottbus.de/swp/ws1718/monopoly-ws1718-g1</url>
    </scm>

    <!-- Developers -->
    <developers>
        <developer>
            <id>prinzach</id>
            <name>Achilles Christian Prinz</name>
            <email>prinzach@b-tu.de</email>
        </developer>
        <developer>
            <id>kostoele</id>
            <name>Eleonora Kostova</name>
            <email>kostoele@b-tu.de</email>
